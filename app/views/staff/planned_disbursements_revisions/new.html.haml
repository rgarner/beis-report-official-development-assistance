=content_for :page_title_prefix, t("page_title.planned_disbursement.revision.new")

%main.govuk-main-wrapper#main-content{ role: "main" }
  .govuk-grid-row
    .govuk-grid-column-full
      %span.govuk-caption-l
        = @activity.delivery_partner_identifier + " " + @activity.title
      %h1.govuk-heading-xl
        = t("page_title.planned_disbursement.revision.new")

      %dl.govuk-summary-list.govuk-summary-list--no-border
        .govuk-summary-list__row
          %dt.govuk-summary-list__key
            Financial quarter and year
          %dd.govuk-summary-list__value
            = @original_planned_disbursement.financial_quarter_and_year
        .govuk-summary-list__row
          %dt.govuk-summary-list__key
            Forecasted spend
          %dd.govuk-summary-list__value
            = @original_planned_disbursement.value

  .govuk-grid-row
    .govuk-grid-column-two-thirds
      = form_with model: @revised_planned_disbursement, url: activity_planned_disbursement_revision_path(@activity, @original_planned_disbursement) do |f|

        = f.govuk_error_summary

        = f.govuk_text_field :value, width: 20, label: { text: "Revised forecasted spend" }

        = f.govuk_submit t("action.planned_disbursement.revision.create.button") do

          = link_to "Cancel", organisation_activity_financials_path(@activity.organisation, @activity), class: ["govuk-button", "govuk-button--secondary", ""]
